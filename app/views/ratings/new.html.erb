<%= render 'form' %>
<script>
	$('#star').raty({
		size:50,
		readOnly: true,
		score: <%= @market.rating %>,
		path: '/assets'
	});

	$('#user_star').raty({
		size:50,
		score: <%= @rating.score %>,
		path: '/assets',
		click: function(score, evt) {
			$.ajax({
				url: '/ratings',
				method: 'post',
				data: { score: score, market: <%= @market.id %> }
			}).done(function (data){});
		}
	});
</script>
