<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>

<div class="container">
	<div class="row col-m-12">
		<div class="page-header">
			<h1>Trip Planner - Asheville, NC</h1>
		</div>
		<%= link_to "\"When you Get to Asheville\"", "http://www.youtube.com/watch?v=4RzhTN9zW3w", target: "blank"%>
	</div>
	<div class="row col-m-12">
		<% @trips.each do |trip| %>
			<div class="row">
				<div class="col-md-12">
					<h3><%= trip.name %> <%= link_to "(edit)", trip_path(trip) %></h3>
					<table class="table table-hover">
					 <thead>
						<tr>
						 <th></th>
						 <th>Name</th>
						 <th>Description</th>
						 <th></th>
						</tr>
					 </thead>

					 <tbody class="sortable">
						<% trip.markets.each do |market| %>
						 <tr id='market_<%= market.id %>' class="ui-state-default" data-trip_id='<%=trip.id %>' >
							 <td class="handle"><%= image_tag("drag_arrow.png", width:'50px')%></td>
							 <td><%= link_to market.name, market.website %></td>
							 <td><%= market.description %></td>
							 <td><%= image_tag(market.image, height:'300px') %></td>
						 </tr>
						<% end %>
					 </tbody>
					</table>
				</div>
			</div>
		<% end %>
	</div>	
	
	<hr>
	<div class="container">
		<div id="map" style="height:300px;" ></div>
	</div>
</div>

<script type="text/javascript">
	buildMap(<%=raw @hash.to_json %>);
	$(function(){
		$('.sortable').sortable({
			dropOnEmpty: false,
			cursor: 'crosshair',
			handle: '.handle',
			items: 'tr',
			opacity: 0.4,
			scroll: true,
			revert: true,
			update: function(event, ui){
				var trip_id = ui.item.attr('data-trip_id');
				var market_id = ui.item.attr('data-market_id');
				$.ajax({
					data: $(this).sortable('serialize'),
					type: 'post',
					url: '/trips/'+trip_id+'/sort',
					dataType: 'script',
					complete: function(request){
						$('.sortable').effect('highlight');
					}
				});
			}
		});
	});
</script>
