<%= form_for(@market, html: {role: "form"}) do |f| %>
  <% if @market.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@market.errors.count, "error") %> prohibited this market from being saved:</h2>

      <ul>
      <% @market.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", rows:"3"%>
  </div>
  <div class="form-group">
    <%= f.label :website %><br>
    <%= f.text_field :website, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :street %><br>
    <%= f.text_field :street, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :state %><br>
    <%= f.text_field :state, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :zip %><br>
    <%= f.text_field :zip, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude, class: "form-control", placeholder: "(Optional)" %>
  </div>
  <div class="form-group">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude, class: "form-control", placeholder: "(Optional)" %>
  </div>
 <div class="form-group">
    <%= f.label :image %><br>
    <%= f.text_field :image, class: "form-control", placeholder: "(Link to Image)" %>
  </div>
  <div class="form-group">
    <%= f.label :rating %><br>
    <%= f.number_field :rating, options={in: 0...6, step:0.5, class: "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit "Add Activity", class: "btn btn-primary" %>
  </div>
<% end %>
