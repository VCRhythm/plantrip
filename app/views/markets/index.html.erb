<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<h1>Listing markets</h1>

<div>
<div style="display:inline-block; width:400px;">
	<div style='width:400px;'>
		<div id="map" style='width: 400px; height:400px;'></div>
	</div>
</div>

<div style="display:inline-block; width:400px;">
<table>
  <thead>
    <tr>
      <th>Name</th>
			<th>Description</th>
      <th>Image</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <tr>
        <td><%= link_to market.name, market.website %></td>
				<td><%= market.description %></td>
        <td><%= image_tag market.image %></td>
        <td><%= market.street %></td>
        <td><%= market.city %></td>
        <td><%= market.state %></td>
        <td><%= market.zip %></td>
        <td><%= market.latitude %></td>
        <td><%= market.longitude %></td>
        <td><%= link_to 'Show', market %></td>
        <td><%= link_to 'Edit', edit_market_path(market) %></td>
        <td><%= link_to 'Destroy', market, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
<br>

<%= form_tag import_markets_path, multipart:true do%>
	<%= file_field_tag :file %>
	<%= submit_tag "Import" %>
<% end %>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider:{}, internal: {id: 'map'}}, function(){
		markers = handler.addMarkers(<%=raw @hash.to_json %>);
		handler.bounds.extendWith(markers);
		handler.fitMapToBounds();
	});
</script>
