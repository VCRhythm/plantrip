<h1>Listing farms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
			<th>Latitude</th>
			<th>Longitude</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>County</th>
      <th>Country</th>
      <th>Owner</th>
      <th>Phone</th>
      <th>Certifications</th>
      <th>Website</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @farms.each do |farm| %>
      <tr>
        <td><%= farm.name %></td>
        <td><%= farm.location %></td>
        <td><%= farm.latitude %></td>
				<td><%= farm.longitude %></td>
				<td><%= farm.address %></td>
        <td><%= farm.city %></td>
        <td><%= farm.state %></td>
        <td><%= farm.zip %></td>
        <td><%= farm.county %></td>
        <td><%= farm.country %></td>
        <td><%= farm.owner %></td>
        <td><%= farm.phone %></td>
        <td><%= farm.certifications %></td>
        <td><%= farm.website %></td>
        <td><%= link_to 'Show', farm %></td>
        <td><%= link_to 'Edit', edit_farm_path(farm) %></td>
        <td><%= link_to 'Destroy', farm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Farm', new_farm_path %>

<%= form_tag import_farms_path, multipart:true do%>
	<%= file_field_tag :file %>
	<%= submit_tag "Import" %>
<% end %>
